apiVersion: apps/v1
kind: Deployment
metadata:
  name: loadgenerator-external
spec:
  selector:
    matchLabels:
      app: loadgenerator-external
  replicas: 1
  template:
    metadata:
      labels:
        app: loadgenerator-external
      annotations:
        sidecar.istio.io/rewriteAppHTTPProbers: "true"
    spec:
      terminationGracePeriodSeconds: 5
      restartPolicy: Always
      containers:
      - name: main
        image: gcr.io/google-samples/microservices-demo/loadgenerator:v0.2.0
        env:
        - name: FRONTEND_ADDR
          value: ""
        - name: USERS
          value: "10"
        resources:
          requests:
            cpu: 300m
            memory: 256Mi
          limits:
            cpu: 500m
            memory: 512Mi